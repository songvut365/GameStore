@model GameStore.Models.Game

@{
  ViewData["Title"] = "Edit Stock";
}

@section css {
  <link rel="Stylesheet" href="@Href("~/css/James.css")">
}

 @*james_title*@
<div id="james_title">
  <h2>แก้ไขสินค้าที่: @ViewData["Id"]</h2>
</div>

@* ////////////////// FROM ZONE ////////////////// *@
<form method="post" enctype="multipart/form-data" asp-controller="Management" asp-action="edit">
@* ////////////////// LEFT BOX /////////////////// *@
  <div class="size-box">
    <div class="float-box">
      <div class="left-box">

          @*edit_youtube*@
          <div class="row">
            <div class="col-label">
              <label for="edit_youtube">Youtube</label>
            </div>
            <div class="col-input">
              <input asp-for="Youtube" class="input-box" />
            </div>
          </div>

          @*edit_mainpic*@
          <div class="row">
            <div class="col-label">
              <label for="edit_mainpic">รูปหลัก</label>
            </div>
            <div class="col-input-img">
              <input asp-for="Main_Image" class="input-box" id="main_img" />
            </div>
            <div class="col-upload">
              <input type="file" name="img" class="upload_btn" id="btn_main_img" hidden/>
              <label for="btn_main_img" class="upload_btn" >เลือกรูป</label>
            </div>
          </div>

          @*edit_pic_1*@
          <div class="row">
            <div class="col-label">
              <label for="edit_pic_1">รูปที่ 1</label>
            </div>
            <div class="col-input-img">
              <input asp-for="Image1" class="input-box" id="img_1" />
            </div>
            <div class="col-upload">
              <input type="file" name="img" class="upload_btn" id="btn_img_1" hidden/>
              <label for="btn_img_1" class="upload_btn" >เลือกรูป</label>
            </div>
          </div>

          @*edit_pic_2*@
          <div class="row">
            <div class="col-label">
              <label for="edit_pic_2">รูปที่ 2</label>
            </div>
            <div class="col-input-img">
              <input asp-for="Image2" class="input-box" id="img_2" />
            </div>
            <div class="col-upload">
              <input type="file" name="img" class="upload_btn" id="btn_img_2" hidden/>
              <label for="btn_img_2" class="upload_btn" >เลือกรูป</label>
            </div>
          </div>

          @*edit_pic_3*@
          <div class="row">
            <div class="col-label">
              <label for="edit_pic_3">รูปที่ 3</label>
            </div>
            <div class="col-input-img">
              <input asp-for="Image3" class="input-box" id="img_3" />
            </div>
            <div class="col-upload">
              <input type="file" name="img" class="upload_btn" id="btn_img_3" hidden/>
              <label for="btn_img_3" class="upload_btn" >เลือกรูป</label>
            </div>
          </div>

          @*edit_game_name*@
          <div class="row">
            <div class="col-label">
              <label for="edit_game_name">ชื่อ</label>
            </div>
            <div class="col-input">
              <input asp-for="Name" class="input-box" />
            </div>
          </div>

          @*edit_game_dev*@
          <div class="row">
            <div class="col-label">
              <label for="edit_game_dev">ผู้พัฒนา</label>
            </div>
            <div class="col-input">
              <input asp-for="Developer" class="input-box" />
            </div>
          </div>

          @*edit_game_cat*@
          <div class="row">
            <div class="col-label">
              <label for="edit_game_cat">หมวดหมู่</label>
            </div>
            <div class="col-input">
              <input asp-for="Type" class="input-box" />
            </div>
          </div>

          @*edit_game_detail*@
          <div class="row">
            <div class="col-label">
              <label for="edit_game_detail">รายละเอียด</label>
            </div>
            <div class="col-input">
              <textarea asp-for="Detail" class="input-box" style="height:180px"></textarea>
            </div>
          </div>
          
      </div>
@* ////////////////// RIGHT BOX ////////////////// *@
      <div class="fixed-box">
        <div class="right-box">

            @*edit_price*@
            <div class="row">
              <div class="col-25">
                <label for="edit_price">ราคา</label>
              </div>
              <div class="col-75">
                <input asp-for="Price" class="input-box" />
              </div>
            </div>

            @*edit_amount*@
            <div class="row">
              <div class="col-25">
                <label for="edit_amount">จำนวน</label>
              </div>
              <div class="col-75">
                <input asp-for="Amount" class="input-box" />
              </div>
            </div>

        <span>@TempData["msg"]</span>

        </div>

        @*Button Submit edit*@
        <input type="submit" value="แก้ใขสินค้า" class="james_btn" />

      </div>
    </div>
  </div>
</form>

<script>

  const main_img = document.getElementById('btn_main_img');
  const btn_img_1 = document.getElementById('btn_img_1');
  const btn_img_2 = document.getElementById('btn_img_2');
  const btn_img_3 = document.getElementById('btn_img_3');

  main_img.addEventListener('change', function(){
    document.getElementById("main_img").value = this.files[0].name;})

  btn_img_1.addEventListener('change', function(){
    document.getElementById("img_1").value = this.files[0].name;})

  btn_img_2.addEventListener('change', function(){
    document.getElementById("img_2").value = this.files[0].name;})

  btn_img_3.addEventListener('change', function(){
    document.getElementById("img_3").value = this.files[0].name;})

</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}