@model GameStore.Models.Game

@{
  ViewData["Title"] = Model.Name;
}

@section css {
  <link rel="Stylesheet" href="@Href("~/css/Fon.css")">
}

<div id="game">
  <h2 class="game-name">@Model.Name</h2>
  <div id="order">
    <div class="container">
      
      <div class="game-teaser">
        <iframe class="video-border" src="@Model.Youtube" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
      </div>

      <div class="cover-box">
        <div class="cover">
          <img src="/img/img_main/@Model.Main_Image" alt="@Model.Main_Image" >
        </div><br>
        <div class="game-price">
          <p class="left-content">ราคา</p>
          <p class="right-content">@Model.Price บาท</p>
        </div><br>
        <div class="game-dev">
          <p class="left-content">ผู้พัฒนา</p>
          <p class="right-content">@Model.Developer</p>
        </div><br>
        <div class="game-remain">
          <p class="left-content">คงเหลือ</p>
          <p class="right-content">@Model.Amount</p>
        </div><br>
        <button class="cart-btn" id="addto-cart"> @Html.ActionLink("Add to cart", "AddToCart", "Cart", new {id = @Model.Id}, "")</button>
      </div>
    </div>

    <div class="game-img">
      <img class=frist-img src="/img/img_1/@Model.Image1" alt="@Model.Name" >
      <img class="second-img" src="/img/img_2/@Model.Image2" alt="@Model.Name" >
      <img class="third-img" src="/img/img_3/@Model.Image3" alt="@Model.Name" >
    </div><br>
    <div class="game-description">
      <p>@Model.Detail</p>
    </div>
  </div>
</div>